    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.ui.home.HomeFragment">
        <LinearLayout
            android:id="@+id/panelForBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/homeImageSlider"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_delay="0"/>
        </LinearLayout>
    <!--    First Row Buttons-->
        <GridLayout
            android:id="@+id/home_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/panelForBanner"
            android:columnCount="2"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp">
            <LinearLayout
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ahoraConNostrosBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_ahorra_con_nosotros"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AHORRA"
                    android:textSize="18sp" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="con nosotros"
                android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/elijeCreditoBtn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/btn_elige_credito"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELIJE EL CREDITO"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="con nosotros"
                    android:textSize="14sp" />
            </LinearLayout>

        </GridLayout>
    <!--    Panel Capacitaciones-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/panelForCapacitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/home_row_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/home_banner_capacitate"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cursosBtn"
                android:layout_width="wrap_content"
                app:backgroundTint="@color/orange_1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Acceder a los cursos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.711" />
        </androidx.constraintlayout.widget.ConstraintLayout>
